<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_SecNoValidation_Lead</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISBLANK( Phone_SecondaryContactPerson__c)),NOT(REGEX( Phone_SecondaryContactPerson__c, &quot;(\\d){10}&quot;) )
)</errorConditionFormula>
    <errorDisplayField>Phone_SecondaryContactPerson__c</errorDisplayField>
    <errorMessage>Please enter 10 digit Phone Number</errorMessage>
</ValidationRule>
