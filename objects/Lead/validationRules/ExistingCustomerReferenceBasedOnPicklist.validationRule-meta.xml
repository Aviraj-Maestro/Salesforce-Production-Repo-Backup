<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ExistingCustomerReferenceBasedOnPicklist</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL( LeadSource , &quot;Existing_Cust_Reference&quot;),   ISBLANK(  Reffering_Existing_Customer_Name__c  )  )</errorConditionFormula>
    <errorDisplayField>Reffering_Existing_Customer_Name__c</errorDisplayField>
    <errorMessage>Please Enter Existing Customer Reference Name.</errorMessage>
</ValidationRule>
